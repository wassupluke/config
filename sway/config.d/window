# /* vim: set filetype=conf : */

for_window {

    # Inhibit Idle when ANY application is fullscreen
    [class="^.*"] inhibit_idle fullscreen
    [app_id="^.*"] inhibit_idle full

    # Custom Window Treatment
    [app_id="org.clementine-player.clementine"] floating enable
    [app_id="pavucontrol"] floating enable
    [app_id=".*sharing.*"] floating enable


    # CopyQ
    [app_id="com.github.hluk.copyq"] floating enable
    [app_id="com.github.hluk.copyq"] resize set 1000 600
    [app_id="com.github.hluk.copyq"] border pixel 5

    # Floating scripts
    [title="updater"] floating enable
    [title="updater"] resize set 870 650
    [title="help-prompt"] floating enable
    [title="help-prompt"] resize set 870 650

}
